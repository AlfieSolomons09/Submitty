{% extends 'generic/Popup.twig' %}
{% block popup_id %}new-calendar-item-form{% endblock %}
{% block title %}New Calendar Item{% endblock %}
{% block body %}
    <p class="std-margin">
        Please select the course, type of item, when it should be, and the text it should display.
    </p>
    <label for="select-multiple-courses">Courses</label>
    <div id = "select-multiple-courses">
        {% for index, one_course in instructor_courses %}
        <span>
            <input type="checkbox" name = 'course_{{ index }}' value="{{ one_course.term ~ ' ' ~ one_course.course }}">
            <label for="{{ one_course.term ~ ' ' ~ one_course.course }}"> {{ one_course.term }} {{ one_course.course }}</label>
        </span>
        {% endfor %}
        <span>
            <input type="checkbox" name="selectAllCourses" id = "selectAllCourses" value="selectAllCourses">
            <label for="selectAllCourses">Select All</label>
        </span>
    </div>
    <script>
        const selectAllCourses = document.getElementById('selectAllCourses');
        const courseOptions = document.querySelectorAll('#select-multiple-courses input');

        selectAllCourses.onclick = () => {
            if (selectAllCourses.checked === false) {
                courseOptions.forEach((option) => {
                    option.checked = false;
                });
            } else {
                courseOptions.forEach((option) => {
                    option.checked = true;
                });
            }
        }

        courseOptions.forEach((option) => {
            if (option.id === 'selectAllCourses') {
                return;
            }

            option.onclick = () => {
                if (option.checked === false) {
                    selectAllCourses.checked = false;
                }
            }
        });
    </script>
    <label for="calendar-item-type">Message Type</label>
    <select id="calendar-item-type" name="type">
        <option value="text">Note</option>
        <option value="ann">Announcement</option>
    </select><br>
    <label for="calendar-item-text">Message Text</label>
    <input type="text" id="calendar-item-text" name="text"><br>
    <label for="edit-picker">Date</label>
    <input id="edit-picker" class="edit-picker" type="text" name="date">
    <input hidden name="csrf_token" value="{{ core.getCsrfToken() }}">
    <script>
        flatpickr('.edit-picker', {
            plugins: [ShortcutButtonsPlugin(
                    {
                        button: [
                            {
                                label: "Today"
                            }
                        ],
                        onClick: (index, fp) => {
                            let date;
                            switch (index) {
                                case 0:
                                    date = new Date();
                                    break;
                            }
                            fp.setDate(date);
                        }
                    }
            )],
            allowInput: true,
            time_24hr: true,
            dateFormat: "Y-m-d",
            onReady: (a, b, fp) => {
                fp.calendarContainer.firstChild.childNodes[1].firstChild.firstChild.setAttribute('aria-label', 'Month');
            }
        });
    </script>
{% endblock %}
{% block form %}
    <form method="post" action="/calendar/items/new">
        {{ parent() }}
    </form>
{% endblock %}
{% block buttons %}
    {{ block('close_button') }}
    <input class="btn btn-primary" type="submit" value="Submit" />
{% endblock %}
